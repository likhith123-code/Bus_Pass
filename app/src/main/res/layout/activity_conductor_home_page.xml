<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:orientation="vertical"
    tools:context=".conductorHomePage">

    <EditText
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:lines="1"
        android:id="@+id/conductorRollNumber"
        android:textAlignment="center"
        android:hint="Enter Student Roll Number"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <Button
        android:layout_margin="10dp"
        android:layout_width="300dp"
        android:id="@+id/buttonLogin"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Get Details"
        android:onClick="conductorCheck"
        android:backgroundTint="@null"
        android:background="@drawable/buttondesign"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="55dp"
        android:layout_marginBottom="20dp"
        tools:layout_editor_absoluteY="551dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:lines="1"
        android:id="@+id/stuconId"
        android:textAlignment="center"
        android:hint="Pass Id"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:lines="1"
        android:id="@+id/stuconType"
        android:textAlignment="center"
        android:hint="Type of Pass"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:lines="1"
        android:id="@+id/stuconVerify"
        android:textAlignment="center"
        android:hint="Verification Details"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:lines="1"
        android:id="@+id/stuconRenewal"
        android:textAlignment="center"
        android:hint="Renewal Date"
        android:textSize="20dp"
        />


</LinearLayout>